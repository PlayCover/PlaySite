---
import BackgroundGradient from "../components/BackgroundGradient.vue";
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.vue";

export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" sizes="180x180" href="/Project-Astrolabos/apple-touch-icon.png">
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content="PlayCover allows you to run iOS apps and games natively with keymapping on your Apple Silicon Mac!"/>
        <meta name="keywords" content="apple silicon, m1 mac, games for mac, mac gaming, mac open source, ios installer, ios emulator, sideloadly, decrypted ipa, genshin impact mac">
        <meta name="robots" content= "index, follow">
        <link rel="canonical" href="https://playcover.io"/>
        <!--
        <meta name="google-site-verification" content="NEEDS TO BE ADDED BY ADMIN"/>
        <meta name="yandex-verification" content="NEEDS TO BE ADDED BY ADMIN"/>
        -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@PlayCoverApp"/>
        <meta name="twitter:title" content="PlayCover | Run iOS apps and games on your Apple Silicon Mac">
        <meta name="twitter:description" content="PlayCover allows you to run iOS apps and games natively with keymapping on your Apple Silicon Mac!">
        <meta name="twitter:image" content="https://playcover.io/PlayCover-Square.png">
        <meta property="og:title" content="PlayCover | Run iOS apps and games on your Apple Silicon Mac">
        <meta property="og:url" content="https://playcover.io">
        <meta property="og:description" content="PlayCover allows you to run iOS apps and games natively with keymapping on your Apple Silicon Mac!">
        <meta property="og:type" content="website">
        <meta property="og:image" content="https://playcover.io/PlayCover-Square.png">
        <!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->
        <script type="application/ld+json">
            {
            "@context": "http://schema.org",
            "@type": "SoftwareApplication",
            "name": "PlayCover",
            "image": "https://playcover.io/PlayCover.png",
            "url": "https://playcover.io/",
            "downloadUrl": "https://github.com/PlayCover/PlayCover/releases/latest",
            "operatingSystem": "Mac"
            }
        </script>
    </head>
    <body
        class="min-w-screen flex flex-col antialiased transition-colors duration-500 min-h-screen bg-light dark:text-white dark:bg-dark"
    >
        <div class="flex-grow">
            <NavBar client:only />
            <slot />
            <BackgroundGradient />
        </div>
        <Footer />
        
        <style>
            html {
                scroll-behavior: smooth;
                background: #181818 !important;
            }
            :root {
                --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
                --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
                --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

                --color-text: hsl(12, 5%, 4%);
                --color-bg: hsl(10, 21%, 95%);
                --color-border: hsl(17, 24%, 90%);
            }

            body {
                background: #181818;
            }

            body .dark {
                background: #181818 !important;
            }

            /* Fonts */
            /* Thin */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 200;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaThin.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 200;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaThinItalic.ttf) format("truetype");
            }

            /* Light */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 300;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaLight.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 300;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaLightItalic.ttf) format("truetype");
            }

            /* Regular */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 400;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaRegular.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 400;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaItalic.ttf) format("truetype");
            }

            /* Medium */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 500;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaMedium.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 500;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaMediumItalic.ttf)
                        format("truetype");
            }

            /* Semi-bold */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 600;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaSemiBold.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 600;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaSemiBoldItalic.ttf)
                        format("truetype");
            }

            /* Bold */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 700;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaBold.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 700;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaBoldItalic.ttf) format("truetype");
            }

            /* Extra-bold */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 800;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaExtraBold.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 800;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaExtraBoldItalic.ttf)
                        format("truetype");
            }

            /* Black */
            @font-face {
                font-family: "Lufga";
                font-style: normal;
                font-weight: 900;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaBlack.ttf) format("truetype");
            }

            @font-face {
                font-family: "Lufga";
                font-style: italic;
                font-weight: 900;
                src: local("Lufga"),
                    url(../assets/fonts/LufgaBlackItalic.ttf) format("truetype");
            }

            /* Medium */

            @font-face {
                font-family: "Itcavantgardestdmd";
                font-style: normal;
                font-weight: 400;
                src: local("Itcavantgardestdmd"),
                    url(../assets/fonts/ITCAvantGardeStdMd.otf)
                        format("opentype");
            }
        </style>
    </body>
</html>
